<%= form_for(@recipe) do |f| %>
<ul>
  <% @recipe.errors.full_messages.each do |error| %>
    <li><%= error %></li>
  <% end %>
</ul>
<p>
  <%= f.label :name %><br />
  <%= f.text_field :name %>
</p>
<p>
  <%= f.label :desc %><br />
  <%= f.text_area :desc %>
</p>
<p>
  Ingredients: <br />
  <%= @fields = f.fields_for :items do |item_for_form| %>
    <%= render 'item_fields', f: item_for_form %>
  <% end %>
  <%= link_to("Add Ingredient", '', class: "add-fields") %>
  <%# link_to_add_fields "Add Ingredient", f, :items %>
</p>
<p>
  <%= f.label :steps %> (separated by commas)<br />
  <%= f.text_area :steps %>
</p>
<p>
  <%= f.submit %>
</p>
<% end %>
