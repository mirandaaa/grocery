<h1><%= @recipe.name %></h1>
<p> <%= @recipe.desc %> </p>
<h2 id="ingredients"> Ingredients: </h2>
<ul>
<%  @recipe.items.each do |item| %>
  <li> <%= item.name %> </li>
<% end %>
</ul>
<h2 id="steps"> Steps: </h2>
<ol>
  <% @steps.each do |step| %>
  <li> <%= step %> </li>
  <% end %>
</ol>
<%= link_to "Edit recipe", edit_recipe_path(@recipe) %>
|
<%= link_to "Delete recipe", recipe_path(@recipe), method: :delete, data: { confirm: "You are deleting #{@recipe.name}. Do you really want to?" } %>
<br /><br />


<br />

